<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Tangerine' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link favicon_link_tag '001.png'  rel="shortcut icon" />
    <%= csrf_meta_tags %>
  </head>

  <body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "logo.svg" %>
      <% end %>
    </div>

    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li><a href="https://twitter.com/mackenziechild">Twitter</a></li>
      <li><a href="http://instagram.com/mackenziechild">Instagram</a></li>
      <li><a href="https://github.com/mackenziechild">Github</a></li>
      <li><a href="mailto:hey@mackenziechild.me">Email</a></li>
    </ul>
    <% if !user_signed_in? %>
    <p class="sign_in">Admin Login</p>
      <% end %>
  </div>
    <div id="main_content">
     <div id="header">
       <% if current_page?(root_path) %>
       <p>All Post</p>
         <% elsif current_page?(about_path) %>
         <p>About </p>
       <% else %>

     <%= link_to "Back To All Posts", root_path %>
       <% end %>
       <% if user_signed_in? %>
       <div class="buttons">
         <button class="button"><%= link_to "New Post", new_post_path %></button>
         <button class="button">Log Out</button>
       </div>
         <% end %>
     </div>
      <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>
   </div>


  </body>
</html>
